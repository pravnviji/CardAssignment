{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "paths": {
      "core": ["core"],
      "core/*": ["core/*"],
      "shared": ["shared"],
      "shared/*": ["shared/*"],
      "feature": ["feature"],
      "feature/*": ["feature/*"]
    }
  }
}
